<section class="section">
  <div class="container">

    <div class="box">
      <div class="table-container">
        <table class="table is-striped is-fullwidth">
          <tbody>
            <tr>
              <th>Full Link</th>
              <td><%= @url.full_link %></td>
            </tr>
            <tr>
              <th>Shortened Link</th>
              <td><%= show_url_for(@url.shortened_link) %></td>
            </tr>
            <tr>
              <th>Click me to redirect!</th>
              <td><%= link_to "Click me", show_url_for(@url.shortened_link), target: "_blank", rel: 'nofollow'%></td>
            </tr>
            <tr>
              <th>ID</th>
              <td><%= @url.id %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <%= link_to "Get another link", new_url_path, class: "button button-large is-success is-outlined is-light" %>
  </div>
</section>